<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcomic"
    tools:context=".Activity.DetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="264dp"
        android:layout_height="201dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/createcartoon" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="124dp"
        android:layout_height="27dp"
        android:layout_marginStart="60dp"
        android:text="NameText"
        android:textAlignment="center"
        android:textColor="#E91E1E"
        app:layout_constraintBottom_toTopOf="@+id/bioText"
        app:layout_constraintStart_toStartOf="@+id/bioText"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/bioText"
        android:layout_width="406dp"
        android:layout_height="312dp"
        android:layout_marginBottom="10dp"
        android:text="Cartoon Bio"
        android:textColor="#9C27B0"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />
</androidx.constraintlayout.widget.ConstraintLayout>